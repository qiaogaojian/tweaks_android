<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:visibility="gone" />-->


    <TextView
        android:id="@+id/btn_jump"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/jump_bg"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="5 跳过"
        android:textColor="#F7F7F0"
        android:textSize="15dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_bottom_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#35074B"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_bottom_logo"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_copy_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_bottom_logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Copyright © 2019 MEGA All Rights Reserved"
            android:textColor="#9B48C3"
            android:textSize="10dp" />

    </RelativeLayout>

</RelativeLayout>