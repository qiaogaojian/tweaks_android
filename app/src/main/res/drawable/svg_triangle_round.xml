<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="64dp"
    android:height="64dp"
    android:viewportWidth="100"
    android:viewportHeight="100">
    <!-- android:width / android:height  VectorDrawable 的实际大小-->
    <!-- android:viewportWidth / android:viewportHeight  画布的大小-->
    <!-- 大写字母代表绝对路径，小写的字母代表相对路径-->
    <path
        android:name="triangle"
        android:fillColor="#65D9EF"
        android:fillAlpha="0.6"
        android:pathData="M 25,25
                          h 50
                          l -25,50
                          Z"
        android:strokeWidth="5"
        android:strokeColor="#F92671"
        android:strokeLineJoin="round" />
    <!-- 1. miter : 默认值，也就是系统默认使用的-->
    <!-- 2. round : 圆角式连接-->
    <!-- 3. bevel：斜角式连接-->
</vector>