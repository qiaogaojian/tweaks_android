<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".view.MainActivity">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_static_activity"
            style="@style/Button"
            android:layout_marginTop="300pt"
            android:text="Static Activity"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_static_view"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Static View"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_static_activity" />

        <Button
            android:id="@+id/btn_inner_class"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Inner Class"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_static_view" />

        <Button
            android:id="@+id/btn_anonymous_class"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Anonymous Class"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_inner_class" />

        <Button
            android:id="@+id/btn_handler"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Handler"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_anonymous_class" />

        <Button
            android:id="@+id/btn_thread"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Thread"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_handler" />

        <Button
            android:id="@+id/btn_timer_task"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Timer Task"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_thread" />

        <Button
            android:id="@+id/btn_sensor_manager"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Sensor Manager"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_timer_task" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>