<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.TestSplashAdActivity">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_test_image"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Test Image Ad"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_test_drawee"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Test Drawee Ad"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_test_image" />

        <Button
            android:id="@+id/btn_test_video"
            style="@style/Button"
            android:layout_marginTop="30pt"
            android:text="Test Video Ad"
            android:typeface="@{@string/typeface}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_test_drawee" />

    </android.support.constraint.ConstraintLayout>

</layout>