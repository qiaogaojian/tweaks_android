<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_adapt_width"
            android:layout_width="300pt"
            android:layout_height="100pt"
            android:layout_marginTop="30pt"
            android:text="Adpat Width"
            android:textAllCaps="false"
            android:textSize="30pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_adapt_height"
            android:layout_width="300pt"
            android:layout_height="100pt"
            android:layout_marginTop="30pt"
            android:text="Adpat Height"
            android:textAllCaps="false"
            android:textSize="30pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_adapt_width" />

        <Button
            android:id="@+id/btn_test_translation"
            android:layout_width="300pt"
            android:layout_height="100pt"
            android:layout_marginTop="30pt"
            android:text="Test Translation"
            android:textAllCaps="false"
            android:textSize="30pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_adapt_height" />

        <Button
            android:id="@+id/btn_test_surfaceview"
            android:layout_width="300pt"
            android:layout_height="100pt"
            android:layout_marginTop="30pt"
            android:text="Test Surfaceview"
            android:textAllCaps="false"
            android:textSize="30pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_test_translation" />

        <Button
            android:id="@+id/btn_test_databinding"
            android:layout_width="300pt"
            android:layout_height="100pt"
            android:layout_marginTop="30pt"
            android:text="Test DataBinding"
            android:textAllCaps="false"
            android:textSize="30pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_test_surfaceview" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>