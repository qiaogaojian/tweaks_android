<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_share1"
            android:layout_width="500pt"
            android:layout_height="500pt"
            android:layout_marginTop="100pt"
            android:padding="100pt"
            android:src="@drawable/floating_icon2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_share2"
            android:layout_width="500pt"
            android:layout_height="500pt"
            android:padding="100pt"
            android:src="@drawable/floating_icon3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_share1" />

        <EditText
            android:id="@+id/et_share"
            android:layout_width="783pt"
            android:layout_height="157pt"
            android:layout_marginBottom="26pt"
            android:hint="Please input text to share"
            android:textSize="36pt"
            app:layout_constraintBottom_toTopOf="@id/btn_line1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btn_line1"
            style="@style/Button"
            android:layout_marginBottom="391pt"
            android:text="LineText"
            android:textAllCaps="false"
            android:textSize="36pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_facebook1" />

        <Button
            android:id="@+id/btn_facebook1"
            style="@style/Button"
            android:layout_marginBottom="391pt"
            android:text="FacebookText"
            android:textAllCaps="false"
            android:textSize="36pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_line1"
            app:layout_constraintRight_toLeftOf="@id/btn_twitter1" />

        <Button
            android:id="@+id/btn_twitter1"
            style="@style/Button"
            android:layout_marginBottom="391pt"
            android:text="TwitterText"
            android:textAllCaps="false"
            android:textSize="36pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_facebook1"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btn_line2"
            style="@style/Button"
            android:layout_marginBottom="235pt"
            android:text="LineImg1"
            android:textAllCaps="false"
            android:textSize="36pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_facebook2" />

        <Button
            android:id="@+id/btn_line3"
            style="@style/Button"
            android:layout_marginTop="56pt"
            android:layout_marginBottom="235pt"
            android:text="LineImg2"
            android:textAllCaps="false"
            android:textSize="36pt"
            app:layout_constraintLeft_toLeftOf="@id/btn_line2"
            app:layout_constraintRight_toRightOf="@id/btn_line2"
            app:layout_constraintTop_toBottomOf="@id/btn_line2" />

        <Button
            android:id="@+id/btn_facebook2"
            style="@style/Button"
            android:layout_marginBottom="235pt"
            android:text="FacebookImg"
            android:textAllCaps="false"
            android:textSize="36pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_line2"
            app:layout_constraintRight_toLeftOf="@id/btn_twitter2" />

        <Button
            android:id="@+id/btn_twitter2"
            style="@style/Button"
            android:layout_marginBottom="235pt"
            android:text="TwitterImg"
            android:textAllCaps="false"
            android:textSize="36pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_facebook2"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>