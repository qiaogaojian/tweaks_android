<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.TestAudioActivity">

    <data>
        
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_play_sound"
            android:layout_width="300pt"
            android:layout_height="100pt"
            android:layout_marginBottom="100pt"
            android:text="Play Sound"
            android:textAllCaps="false"
            android:textSize="30pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_play_music" />

        <Button
            android:id="@+id/btn_play_music"
            android:layout_width="300pt"
            android:layout_height="100pt"
            android:layout_marginBottom="100pt"
            android:text="Play Music"
            android:textAllCaps="false"
            android:textSize="30pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_play_sound"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>