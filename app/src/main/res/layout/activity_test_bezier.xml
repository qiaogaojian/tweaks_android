<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.TestBezierActivity">

        <com.etatech.test.view.practice9.Bezier2View
            android:id="@+id/bezier2"
            android:layout_width="match_parent"
            android:layout_height="500pt"
            android:background="@color/code_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.etatech.test.view.practice9.Bezier3View
            android:id="@+id/bezier3"
            android:layout_width="match_parent"
            android:layout_height="500pt"
            android:layout_marginTop="3pt"
            android:background="@color/code_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bezier2" />

        <com.etatech.test.view.practice9.Bezier3View
            android:layout_width="match_parent"
            android:layout_height="500pt"
            android:layout_marginTop="3pt"
            android:background="@color/code_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bezier3" />

    </android.support.constraint.ConstraintLayout>
</layout>
