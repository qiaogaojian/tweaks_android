<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.TestMvvmActivity">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/code_black">

        <TextView
            android:id="@+id/tv_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500pt"
            android:text="BTC"
            android:textColor="@color/code_white"
            android:textSize="99pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--https://api.gemini.com/v1/pubticker/btcusd-->
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100pt"
            android:textColor="@color/code_white"
            android:textSize="66pt"
            app:layout_constraintLeft_toLeftOf="@id/tv_btc"
            app:layout_constraintRight_toRightOf="@id/tv_btc"
            app:layout_constraintTop_toBottomOf="@id/tv_btc"
            tools:text="9788.99" />

    </android.support.constraint.ConstraintLayout>

</layout>